<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_parent_size">

    <TextView
        android:id="@+id/topic_text_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/topic_circle"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="@dimen/font_size_topic"
        android:textStyle="bold"
        tools:text="liveblog" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_size">

        <TextView
            android:id="@+id/title_text_view"
            style="@style/font_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            tools:text="Climate debate heats up question time â€“ as it happened" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/origin_text_view"
                style="@style/font_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                tools:text="Media" />

            <TextView
                android:id="@+id/date_text_view"
                style="@style/font_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                tools:text="2021-10-20" />

            <TextView
                android:id="@+id/time_text_view"
                style="@style/font_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                tools:text="08:09:24" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>